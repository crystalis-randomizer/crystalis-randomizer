{
  "compilerOptions": {
    "allowJs": false,
    "target": "es2020",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "bundler",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
  },
  "exclude": [
    "unused/*.ts",
    "asm/*.ts",
  ]
}
